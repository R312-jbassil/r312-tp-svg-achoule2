---
import Layout from '../layouts/Layout.astro';
import PocketBase from 'pocketbase';

const pb = new PocketBase('http://127.0.0.1:8090');
const records = await pb.collection('svgs').getFullList({ sort: '-created' });
---

<Layout>
  <div class="min-h-screen bg-base-200 py-10">
    <div class="max-w-5xl mx-auto space-y-8">
      <h1 class="text-3xl font-bold text-center text-primary">üñºÔ∏è Galerie SVG</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {records.map((svg) => (
          <div class="card bg-base-100 shadow-md p-4">
            <h2 class="text-lg font-bold mb-2">{svg.name}</h2>
            <div class="border rounded bg-white p-4" set:html={svg.code}></div>
            <pre class="mt-2 text-xs bg-gray-100 p-2 rounded overflow-x-auto">{svg.code}</pre>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>
